<div class="row justify-content-center">
    <div class="col-md-6 mx-auto align-self-center">
        <div class="card border-dark mb-3 ">
            <div class="card header">
                <h3 class="text-center">Login</h3>
                <div class="card card-body text-dark">
                    <form action="/users/signup" method="POST">
                        <div class="col-form-label">
                            <label for="email">Email</label>
                            <input class="form-control required" id="email" value="{{email}}" name="email" placeholder="email" type="email" required="true">
                        </div>
                        <div class="col-form-label">
                            <label for="email">Password</label>
                            <input class="form-control" id="password" value="{{password}}" name="password" placeholder="Password" type="password" required="true">
                        </div>
                        <div class="col-form-label">
                            <label for="email">Confirm Password</label>
                            <input class="form-control" id="password2" value="{{password}}" name="password2" placeholder="Confirm Password" type="password" required="true">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>